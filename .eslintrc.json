{
  "env": {
    "es2020": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "max-len": 0,
    "strict": 0,
    "import/no-extraneous-dependencies": 0,
    "no-underscore-dangle": 0,
    "prefer-promise-reject-errors": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "prefer-rest-params": 0,
    "import/no-cycle": 0
  }
}
